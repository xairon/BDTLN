{#
    Here an administrator will can delete a category
#}

{% extends "BdtlnUserBundle::layout.html.twig" %}


{% block fos_user_content %}
    <div id="form">
        {{ "Do you want delete the category" | trans }} 
        
        {% if app.request.locale == 'fr' %}
            {{ category.frenchTitle }}
        {% else %}
            {{ category.englishTitle }}
        {% endif %}
        ?
        
        <form method="POST" action="{{ path('bdtln_user_delete_category', {'id': category.id}) }}">
            
            <label>{{ 'Yes'|trans }}</label><input value="yes" name="delete_category" type="radio"/>
            <label>{{ 'No'|trans }}</label><input checked="checked" value="no" name="delete_category" type="radio" />
            <input type="hidden" name="token" value="{{ app.session.get('token') }}" />
            <br />
            <input type="submit" class="btn btn-primary" value="{{ "Validate" | trans }}" />
        </form>
    </div>    
   <button id="back" name="back" class="btn btn-primary" onClick="history.back()">{{ "Back" | trans }}</button> 
    
    
    
    
{% endblock %}